---
import BaseLayout from "./BaseLayout.astro";
import left_arrow from "../images/left_arrow.svg";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class="post">
    <div class="post__heading grid container">
      <div class="post__heading--group">
        <h1 class="heading-700 post__heading--title">{frontmatter.title}</h1>
        <a class="post__back-link" href="/blog"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            viewBox="0 0 256 256"
            ><path
              d="M224,128a8,8,0,0,1-8,8H59.31l58.35,58.34a8,8,0,0,1-11.32,11.32l-72-72a8,8,0,0,1,0-11.32l72-72a8,8,0,0,1,11.32,11.32L59.31,120H216A8,8,0,0,1,224,128Z"
            ></path></svg
          >Back to posts</a
        >
      </div>
      <time>{frontmatter.pubDate.slice(0, 10)}</time>
    </div>
    <div class="container">
      <div class="post__content">
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .grid {
    gap: 0.7rem;
  }

  a {
    width: fit-content;
  }

  h1 {
    margin-right: auto;
  }

  .post__heading--group {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .post__heading--title {
    max-width: 40rem;
  }

  p {
    color: var(--panda-500);
    margin-bottom: 1rem;
  }

  .post {
    margin: 10vh auto;
  }

  .post {
    animation: body-animation 1s;
  }

  .post__heading {
    margin-bottom: 3rem;
  }

  .post__back-link {
    display: flex;
    gap: .25rem;
    align-items: center;
  }

  svg {
    color: var(--panda-300);
    width: 20px;
  }

  .post__content {
    max-width: 40rem;
  }

  time {
    color: var(--panda-500);
  }

  /* hr {
      border-width: 1px;
      border-style: solid;
      color: var(--moss-200);
    } */

  @keyframes body-animation {
    from {
      opacity: 0;
    }
  }

  @media (min-width: 930px) {
    .post__heading--group {
      grid-template-columns: 1fr 9rem;
      gap: 2rem;
      align-items: baseline;
    }
  }
</style>
